<form action="/task/edit/{{task._id}}" method="post">  
    <label for="title">Write a title
    <input type="text" name="title" placeholder="title" id="title" value="{{task.title}}" />
  </label>
  <label for="description">
    Write a description
    <textarea
      name="description"
      placeholder="description"
      id="description"
    >{{task.description}}</textarea>
    
  </label>
  <button>update</button>
</form>