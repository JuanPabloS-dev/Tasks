<form action="/task/add" method="post" class="d-flex flex-column gap-3 p-4 mr-10 bg-dark rounded-4">
  <h2>Add Task</h2>
  <label class="d-flex flex-column" for="title">Write a title
    <input type="text" name="title" placeholder="title" id="title" />
  </label>
  <label class="d-flex flex-column" for="description">
    Write a description
    <textarea
      class="textarea-small"
      name="description"
      placeholder="description"
      id="description"
    ></textarea>
  </label>
  <button class="btn-send rounded-3">add</button>
</form>
